<?xml version="1.0"?>
<!-- Regional definitions for the African deserts, based on the Middle East regions -->

<PropertyList>


  <!-- Define the boxes with given latitude/longitude -->
  
  
  <condition>
   <and>
   <equals>
    <property>sim/startup/season</property>
    <value>summer</value>
   </equals>
   <or>
   
   <and>
      <greater-than>
       <property>position/longitude-deg</property>
       <value>10.6</value>
      </greater-than>
      <less-than>
       <property>position/longitude-deg</property>
       <value>21.6</value>
      </less-than>
      <greater-than>
       <property>position/latitude-deg</property>
       <value>-13.0</value>
      </greater-than>
      <less-than>
       <property>position/latitude-deg</property>
       <value>-31.6</value>
       </less-than>
    </and>
	
	<and>
      <greater-than>
       <property>position/longitude-deg</property>
       <value>-18.0</value>
      </greater-than>
      <less-than>
       <property>position/longitude-deg</property>
       <value>60.1</value>
      </less-than>
      <greater-than>
       <property>position/latitude-deg</property>
       <value>33.9</value>
      </greater-than>
      <less-than>
       <property>position/latitude-deg</property>
       <value>15.0</value>
       </less-than>
      </and>
	  
	  <and>
      <greater-than>
       <property>position/longitude-deg</property>
       <value>39.4</value>
      </greater-than>
      <less-than>
       <property>position/longitude-deg</property>
       <value>60.1</value>
      </less-than>
      <greater-than>
       <property>position/latitude-deg</property>
       <value>15.0</value>
      </greater-than>
      <less-than>
       <property>position/latitude-deg</property>
       <value>-2.4</value>
       </less-than>
      </and>
    </or> 
   
   </and>
  </condition>
  
  </PropertyList>