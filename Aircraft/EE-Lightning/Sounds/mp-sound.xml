    <x>12.0</x>
    <y>0.0</y>
    <z>2.0</z>
   </position>
   <orientation>
	<x>1</x>
    <y>0</y>
    <z>0</z>
    <inner-angle>35.0</inner-angle>
    <outer-angle>90</outer-angle>
    <outer-gain>0.45</outer-gain>
   </orientation>
   <volume>
    <property>engines/engine[0]/rpm</property>
    <factor>0.0185</factor>
    <offset>-0.6</offset>
   </volume>   
   <reference-dist>25</reference-dist>
   <max-dist>5000</max-dist>
   
  </avon1thrust>
  

