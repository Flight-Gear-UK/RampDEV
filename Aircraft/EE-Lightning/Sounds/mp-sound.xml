<?xml version="1.0"?>
 
<PropertyList>

 <fx>
 
  <avon1start>
   <name>Turbine 1 Start</name>
   <mode>once</mode>
   <path>Aircraft/EE-Lightning/Sounds/engine-start.wav</path>
   <delay-sec>0.05</delay-sec>
   <condition>
    <equals>
     <property>sim/multiplay/generic/int[4]</property>
	 <value>1</value>
	</equals>
   </condition>
   <position>
    <x>-10.0</x>
    <y>0.0</y>
    <z>3.0</z>
   </position>
   <orientation>
    <x>-1.0</x>
    <y>0.0</y>
    <z>0.0</z>
    <inner-angle>180.0</inner-angle>
    <outer-angle>360.0</outer-angle>
    <outer-gain>0.2</outer-gain>
   </orientation>
   <volume>
    <property>engines/engine[0]/rpm</property>
    <factor>-0.008</factor>
    <offset>0.4</offset>
   </volume>
  </avon1start>
  
  <avon1run>
   <name>Turbine 1 Run</name>
   <mode>looped</mode>
   <path>Aircraft/EE-Lightning/Sounds/engine-run.wav</path>
   <delay-sec>0.06</delay-sec>
   <condition>
    <greater-than>
     <property>engines/engine[0]/rpm</property>
	 <value>3</value>
	</greater-than>
   </condition>
   <position>
    <x>-10.0</x>
    <y>0.0</y>
    <z>3.0</z>
   </position>
   <orientation>
    <x>-1.0</x>
    <y>0.0</y>
    <z>0.0</z>
    <inner-angle>180.0</inner-angle>
    <outer-angle>360.0</outer-angle>
    <outer-gain>0.2</outer-gain>
   </orientation>
   <volume>
    <property>engines/engine[0]/rpm</property>
    <factor>0.01</factor>
    <offset>0</offset>
	<max>0.45</max>
   </volume>
   <pitch>
    <property>engines/engine[0]/rpm</property>
	<factor>0.008</factor>
	<offset>0.3</offset>
	<min>0</min>
	<max>2.5</max>
   </pitch>
   <reference-dist>15</reference-dist>
   <max-dist>2000</max-dist>
  </avon1run>
  
  <avon1thrust>
   <name>Turbine 1 Thrust</name>
   <mode>looped</mode>
   <path>Aircraft/EE-Lightning/Sounds/thrust.wav</path>
