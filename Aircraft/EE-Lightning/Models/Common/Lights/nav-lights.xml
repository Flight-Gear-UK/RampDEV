     </effect>
   
     <animation>
		 <type>material</type>
		 <object-name>stern.light.1</object-name>
		 <object-name>stern.light.2</object-name>
		 <object-name>port.light</object-name>
		 <object-name>stbd.light</object-name>
		 <emission>
			 <red>1</red>
			 <green>1</green>
			 <blue>0.8</blue>
		 </emission>
	 </animation>
	 
	  <animation>
		 <type>material</type>
		 <object-name>strobe.aura.port</object-name>
		 <object-name>strobe.aura.stbd</object-name>
		 <object-name>strobe.aura.top</object-name>
		 <emission>
			 <factor-prop>lights/external/anticoll-lights</factor-prop>
			 <red>1</red>
			 <green>1</green>
			 <blue>0.9</blue>
		 </emission>
	 </animation>
	 
 <animation>
  <type>select</type>
   <object-name>stern.light.1</object-name>
   <object-name>stern.light.2</object-name>
   <object-name>port.light</object-name>
   <object-name>stbd.light</object-name>
  <condition>
   <greater-than>
    <property>sim/multiplay/generic/int[0]</property>
	<value>22</value>
   </greater-than>
  </condition>
 </animation>
 
  <animation>
  <type>blend</type>
  <object-name>stern.light.1</object-name>
		 <object-name>stern.light.2</object-name>
		 <object-name>port.light</object-name>
		 <object-name>stbd.light</object-name>
		 <object-name>strobe.aura.port</object-name>
		 <object-name>strobe.aura.stbd</object-name>
		 <object-name>strobe.aura.top</object-name>
    <expression>
      <sum>
        <product>
            <value>-1</value>
          <sum>
            <max>
              <product>
                <pow>
                  <cos><property>/sim/time/sun-angle-rad</property></cos>
                  <value>0.6</value>
                </pow>
                <value>0.25</value> <!-- by tuning this, you specify how much to fade during full daylight -->
              </product>
              <value>0</value>
            </max>
            <value>-1</value>
          </sum>
          <value>-1</value>
        </product>
        <value>1.7</value>
      </sum>
    </expression>
 </animation>
	 
