  <type>rotate</type>
  <property>/instrumentation/autopilot/key-glide</property>
  <factor>-18</factor>
  <offset-deg>0</offset-deg>
  <center>
   <x-m>-0.000477</x-m>
   <z-m>0.025</z-m>
  </center>
  <axis>
   <x>0</x>
   <y>1</y>
