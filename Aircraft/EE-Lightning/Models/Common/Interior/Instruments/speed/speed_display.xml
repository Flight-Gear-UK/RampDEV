 <effect>
   <inherits-from>Effects/model-transparent</inherits-from>
    	<object-name>fixed_scale</object-name>
		<object-name>scale_background</object-name>
   </effect>	

	<animation>
		<type>textranslate</type>
		<object-name>scale_background</object-name>
		<property>/instrumentation/airspeed-indicator/indicated-speed-kt</property>
		<!--<factor>0.001</factor>-->
		<interpolation>
			<entry>
				<ind>0</ind>
				<dep>0</dep>
			</entry>
			<entry>
				<ind>100</ind>
				<dep>0.075</dep>
			</entry>
			<entry>
				<ind>150</ind>
				<dep>0.15</dep>
			</entry>
			<entry>
				<ind>200</ind>
				<dep>0.21</dep>
			</entry>
			<entry>
				<ind>300</ind>
				<dep>0.3</dep>
			</entry>
			<entry>
				<ind>400</ind>
				<dep>0.365</dep>
			</entry>
			<entry>
				<ind>500</ind>
				<dep>0.42</dep>
			</entry>
			<entry>
				<ind>600</ind>
				<dep>0.46</dep>
			</entry>
			<entry>
				<ind>700</ind>
				<dep>0.5</dep>
			</entry>
		</interpolation>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	
<!-- Instrument Lighting -->
	<animation>
		<type>material</type>
		<object-name>fixed_scale</object-name>
		<object-name>scale_background</object-name>
		<emission>
			<factor-prop>/systems/electrical/outputs/internal-lights/IFIS</factor-prop>
			<red>1</red>
			<green>1</green>
			<blue>0.65</blue>
		</emission>
	</animation>

	<!-- *** LoD *** -->
	<animation>
		<type>range</type>
		<min-m>0</min-m>
		<max-m>5</max-m>
	</animation>

</PropertyList>
