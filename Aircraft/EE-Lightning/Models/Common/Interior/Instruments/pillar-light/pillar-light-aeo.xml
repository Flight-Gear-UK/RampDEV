   <animation>
    <type>light</type>
    <light-type>spot</light-type>
    <object-name>beam</object-name>
	<nopreview/>
    <position>
      <x> 0.015 </x>
      <y> 0 </y>
      <z> 0.09 </z>
    </position>
    <direction>
      <x> 0.07 </x>
      <y>  0 </y>
      <z>  -0.2 </z>
    </direction>
    <ambient>
      <r>  0.3 </r>
      <g>  0.3 </g>
      <b>  0.1 </b>
      <a>  0.2 </a>
    </ambient>
    <diffuse>
      <r>  0.9 </r>
      <g>  0.9 </g>
      <b>  0.55 </b>
      <a>  1.0 </a>
    </diffuse>
    <specular>
      <r>  1.0 </r>
      <g>  1.0 </g>
      <b>  0.95 </b>
      <a>  1.0 </a>
    </specular>
   <dim-factor>
    <property>/controls/rotary/pilots/coaming-panel-dimmer-left</property>
    <factor>1.4</factor>
    <min>0</min>
    <max>1.0</max>
   </dim-factor>
   <attenuation>
     <c>1.0</c>
     <l>0.9</l>
     <q>0.9</q>
   </attenuation>
   <exponent>25</exponent>
   <cutoff>100</cutoff>
   <near-m>0.01</near-m>
   <far-m>1</far-m>
 </animation>
  
 <animation>
  <type>material</type>
  <object-name>pillarlight.lens.on</object-name>
  <emission>
    <red>0.7</red>
    <green>0.7</green>
    <blue>0.3</blue>
  </emission>
 </animation>

