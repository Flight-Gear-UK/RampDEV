
<PropertyList>

  <path>reheat.ac</path>
 
 <effect>
  <inherits-from>Effects/model-transparent</inherits-from>
  <object-name>reheat-flame-outer</object-name>
  <object-name>reheat-flame-inner</object-name>
 </effect>
 
 <animation>
  <type>select</type>
  <object-name>reheat-flame-outer</object-name>
  <object-name>reheat-flame-inner</object-name>
  <condition>
   <greater-than>
    <property>sim/multiplay/generic/float[3]</property>
	<value>0.01</value>
   </greater-than>
  </condition>
 </animation>
  
 
 <animation>
  <type>textranslate</type>
  <object-name>reheat-flame-outer</object-name>
  <property>sim/multiplay/generic/float[3]</property>
  <factor>-0.15</factor>
  <axis>
   <x>0</x>
   <y>1</y>
  </axis>
 </animation>
 
 <animation>
  <type>textranslate</type>
  <object-name>reheat-flame-inner</object-name>
  <property>sim/multiplay/generic/float[3]</property>
  <factor>-0.2</factor>
  <offset>0.2</offset>
  <axis>
   <x>0</x>
   <y>1</y>
  </axis>
 </animation>
 
 <particlesystem>
   <name>flightFireSmoke</name>
   <texture>particle.png</texture>
   <emissive>true</emissive>
   <lighting>false</lighting>
   
   <condition>
    <greater-than>
	 <property>sim/multiplay/generic/float[3]</property>
	 <value>0.01</value>
	</greater-than>
   </condition>

   <offsets>
     <x-m>-0.2</x-m>
     <y-m>0</y-m>
     <z-m>0.03</z-m>
     <pitch-deg>0</pitch-deg>
     <roll-deg>0</roll-deg>
   </offsets>

   <attach>local</attach>
   
   <placer>
     <type>point</type>
   </placer>
   
    <shooter>
      <theta-min-deg>90</theta-min-deg>
      <theta-max-deg>92</theta-max-deg>
      <phi-min-deg>-1.5</phi-min-deg>
      <phi-max-deg>1.5</phi-max-deg>
      <speed-mps>
	    <expression>
         <value>7</value>
		</expression>
       <spread>0</spread>
     </speed-mps>
      <rotation-speed>
        <x-min-deg-sec>0</x-min-deg-sec>
        <y-min-deg-sec>0</y-min-deg-sec>
        <z-min-deg-sec>0</z-min-deg-sec>
        <x-max-deg-sec>0</x-max-deg-sec>
        <y-max-deg-sec>0</y-max-deg-sec>
        <z-max-deg-sec>0</z-max-deg-sec>
      </rotation-speed>
    </shooter>
   
   <counter>
     <particles-per-sec>
       <value>22</value>
       <spread>0</spread>
     </particles-per-sec>
   </counter>
   
   <!-- align>billboard</align -->
   
   <particle>
     <start>
       <color>
         <red>
           <value>1</value>
         </red>
         <green>
           <value>0.9</value>
         </green>
         <blue>
           <value>0.9</value>
         </blue>
         <alpha>
		   <expression>
		    <value>1</value>
		   </expression>
         </alpha>
       </color>
       <size>
	    <expression>
         <value>0.3</value>
		</expression>
       </size>
     </start>
     <end>
       <color>
         <red>
           <value>1</value>
         </red>
         <green>
           <value>0.7</value>
         </green>
         <blue>
           <value>0.7</value>
         </blue>
         <alpha>
           <value>0.3</value>
         </alpha>
       </color>
       <size>
	    <expression>
		  <value>0.1</value>
		 </expression>
       </size>
     </end>
     <life-sec>
	  <expression>
	   <product>
	    <property>sim/multiplay/generic/float[3]</property>
        <value>0.15</value>
	   </product>
	  </expression>
     </life-sec>
     <mass-kg>140</mass-kg>
     <radius-m>0.01</radius-m>
   </particle>
   
   <program>
     <fluid>air</fluid>
     <gravity type="bool">false</gravity>
     <wind type="bool">false</wind>
   </program>
   
</particlesystem>
  
  <animation>
   <type>material</type>
   <object-name>reheat-flame-outer</object-name>
   <object-name>reheat-flame-inner</object-name>
   <emission>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </emission>
  </animation>

</PropertyList>