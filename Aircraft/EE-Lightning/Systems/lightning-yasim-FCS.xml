
<PropertyList>

 <!-- Lightning T5 FCS -->

 <filter>
  <type>gain</type>
  <input>
   <expression>
    <sum>
     <property>/controls/flight/aileron</property>
     <property>/controls/copilot/aileron</property>
	 <property>/systems/FCS/autopilot/actuators/ailerons-norm</property>
	</sum>
   </expression>
  </input>
  <output>
   <property>/systems/FCS/command-outputs/aileron</property>
  </output>
  <gain>1.0</gain>
  <u_min>-1.0</u_min>
  <u_max>1.0</u_max>
 </filter>
 
