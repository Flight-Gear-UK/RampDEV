 <filter>
  <name>Vertical Source Select</name>
  <type>gain</type>
  <input>
   <condition>
    <equals>
     <property>/systems/FCS/mode-vertical</property>
	 <value></value>
	</equals>
   </condition>
   <value>0</value>
  </input>
  <input>
   <condition>
    <equals>
	 <property>/systems/FCS/mode-vertical</property>
	 <value>altitude-hold</value>
    </equals>
   </condition>
   <property>/systems/FCS/altitude-error</property>
   <scale>-1</scale>
  </input>
  <input>
   <condition>
    <equals>
	 <property>/systems/FCS/mode-vertical</property>
	 <value>pitch-hold</value>
    </equals>
   </condition>
   <property>/instrumentation/autopilot/selector-pitch</property>
  </input>
  <input>
   <condition>
    <equals>
	 <property>/systems/FCS/mode-vertical</property>
	 <value>glide</value>
    </equals>
   </condition>
   <value>-3</value>
  </input>
  <output>
   <property>/systems/FCS/target-pitch-deg</property>
  </output>
  <gain>1.0</gain>
  <u_min>-6.6</u_min>
  <u_max>6.6</u_max>
 </filter>
 
 <filter>
